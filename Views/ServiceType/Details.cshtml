@model CarService.Models.ServiceType
@{

    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Service Type Details</h2>
<br />
<div class=" border  backgroundWhite">
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ServiceType.Name"></label>
        </div>
        <div class="col-5">
            <input asp-for="ServiceType.Name" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ServiceType.Price"></label>
        </div>
        <div class="col-5">
            <input asp-for="ServiceType.Price" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <div class="row">
                <div class="col-6">
                    <a asp-action="Edit" asp-route-id="@Model.ServiceType.Id" class="btn btn-info form-control">Güncellemeye Git</a>
                </div>
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-success form-control">Listeye Dön</a>
                </div>
            </div>

        </div>
    </div>

</div>