@model CarService.Models.Car
@{
}


<br />
<h2 class="text-info">Yeni Araç Ekle</h2>
<br />
<form method="post">
    <div class="border backgroundWhite">
        <input hidden asp-for="UserId" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="VIN"></label>
            </div>
            <div class="col-5">
                <input asp-for="VIN" class="form-control" />
            </div>
            <span asp-validation-for="VIN" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Make"></label>
            </div>
            <div class="col-5">
                <input asp-for="Make" class="form-control" />
            </div>
            <span asp-validation-for="Make" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Model"></label>
            </div>
            <div class="col-5">
                <input asp-for="Model" class="form-control" />
            </div>
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Style"></label>
            </div>
            <div class="col-5">
                <input asp-for="Style" class="form-control" />
            </div>
            <span asp-validation-for="Style" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Year"></label>
            </div>
            <div class="col-5">
                <input asp-for="Year" class="form-control" />
            </div>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Color"></label>
            </div>
            <div class="col-5">
                <input asp-for="Color" class="form-control" />
            </div>
            <span asp-validation-for="Color" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToListButton" />
            </div>
        </div>
    </div>
</form>
